---
export interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;
---

<!-- About Me Section -->
<section id="about" class={`py-40 bg-white relative overflow-hidden ${className}`}>
  <!-- Sophisticated Background Elements -->
  <div class="absolute inset-0">
    <div class="absolute top-0 left-0 w-full h-px bg-gradient-to-r from-transparent via-gray-300/50 to-transparent"></div>
    <div class="absolute bottom-0 left-0 w-full h-px bg-gradient-to-r from-transparent via-gray-300/50 to-transparent"></div>
    <div class="absolute top-1/3 left-1/3 w-72 h-72 bg-gray-100/50 rounded-full blur-3xl"></div>
    <div class="absolute bottom-1/3 right-1/3 w-64 h-64 bg-gray-200/30 rounded-full blur-3xl"></div>
  </div>
  
  <div class="max-w-4xl mx-auto px-6 relative z-10">
    <div class="text-center mb-20">
      <h2 class="text-6xl sm:text-7xl font-extralight tracking-tight text-gray-900 mb-8">
        ABOUT ME
      </h2>
      <div class="w-24 h-px bg-gradient-to-r from-transparent via-gray-400/60 to-transparent mx-auto"></div>
    </div>
    
    <div class="prose prose-lg max-w-none">
      <div class="text-gray-700 leading-relaxed space-y-8 text-lg font-light">
        <p class="text-xl md:text-2xl font-extralight text-gray-900 leading-relaxed">
          Hi, I'm John.
        </p>
        
        <p>
          I'm a musician who loves creating music that connects with people. Each song is a piece of my journey, and I'm grateful to share it with you.
        </p>
        
        <p class="text-gray-600 italic">
          "Music is the universal language that connects us all. Through my work, I hope to create moments of connection, understanding, and pure emotional resonance."
        </p>
      </div>
    </div>
  </div>
</section>
