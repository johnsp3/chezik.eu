---
export interface Props {
  level?: 1 | 2 | 3 | 4 | 5 | 6;
  variant?: 'hero' | 'section' | 'subsection' | 'default';
  class?: string;
  id?: string;
}

const { 
  level = 2, 
  variant = 'default', 
  class: className = '',
  id
} = Astro.props;

const baseClasses = 'font-extralight tracking-tight';

const variantClasses = {
  hero: 'text-8xl sm:text-9xl lg:text-[12rem] leading-none',
  section: 'text-6xl sm:text-7xl',
  subsection: 'text-3xl sm:text-4xl',
  default: 'text-2xl sm:text-3xl'
};

const classes = `${baseClasses} ${variantClasses[variant]} ${className}`;

const Tag = `h${level}` as keyof HTMLElementTagNameMap;
---

<Tag class={classes} id={id}>
  <slot />
</Tag>
